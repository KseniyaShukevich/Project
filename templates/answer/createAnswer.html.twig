{% extends 'base.html.twig' %}

{% block title %}Создание вопросов{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
{% endblock %}

{% block content %}
    <div class="log">
        <table class="tableForm">
            {{ form_start(form)}}
            <tr>
                <td>
                    {{ form_label(form.text)}}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_widget(form.text)}}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.isCorrect, 'Правильно')}}
                    {{ form_widget(form.isCorrect) }}
                </td>
            </tr>
            <tr>
                <td>
                    <button class="submit">Сохранить</button>
                </td>
            </tr>
            {{ form_end(form)}}
        </table>
    </div>
{% endblock %}