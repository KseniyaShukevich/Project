{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}
 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('form') }}
 {% endblock %}

{% block content %}
    <div class="log">
    <h1>Регистрация</h1>
        {{ form_start(registrationForm) }}
        <table class="tableForm">
            <tr>
                <td>
                    {{ form_label(registrationForm.fullname, 'ФИО') }}
                </td>
                <td>
                    {{ form_label(registrationForm.email) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_widget(registrationForm.fullname) }}
                </td>
                <td>
                    {{ form_widget(registrationForm.email) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(registrationForm.plainPassword, 'Пароль') }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_widget(registrationForm.plainPassword) }}
                </td>
                <td></td>
            </tr>
            <tr>
                <td>
                    {{ form_row(registrationForm.agreeTerms, {'label': 'Принимаю'}) }}
                </td>
                <td>
                    <button class="submit">Зарегистрироваться</button>
                </td>
            </tr>
        </table>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
